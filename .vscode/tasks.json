{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": ["install"]
        },
        {
            "taskName": "update",
            "args": ["update"]
        },
        {
            "taskName": "build",
            "args": ["run", "build"]
        },
        {
            "taskName": "hotel",
            "args": ["run", "hotel"]
        },
        {
            "taskName": "run dev",
            "args": ["run", "dev"]
        },
        {
            "taskName": "run prod",
            "args": ["run", "prod"]
        }
    ]
}